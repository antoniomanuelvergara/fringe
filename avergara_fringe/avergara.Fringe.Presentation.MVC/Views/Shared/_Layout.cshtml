@{
    Layout = null;
    string controlador = ViewContext.RouteData.Values["Controller"].ToString().ToLower();

    //Model.Usuario usuario = new Model.Usuario().Obtener(Helper.SessionHelper.GetUser());
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->

    <link href="~/Content/vendor/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/simple-sidebar.css" rel="stylesheet">
    @*<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />*@
    <link href="~/Content/Site.css" rel="stylesheet">
    <link href="~/Content/Style.css" rel="stylesheet">

    <link href="~/Content/arduino-light1.css" rel="stylesheet" />

    <script src="~/Content/grid/jquery-1.10.2.min.js"></script>

    <script src="~/Scripts/highlight.pack.js"></script>
    <script src="~/Scripts/highlightjs-line-numbers.js"></script>

</head>

<body>
@if (controlador != "login")
{
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-warning">Fringe</div>
            <div class="list-group list-group-flush">

                @Html.ActionLink("Flecos", "Index", "Fringe", null, new { @class = "list-group-item list-group-item-action bg-dark text-white", id = "pepito" })
                @Html.ActionLink("Categorias", "Index", "Category", null, new { @class = "list-group-item list-group-item-action bg-dark text-white", id = "pepito2" })
                @Html.ActionLink("Tipos", "Index", "Type", null, new { @class = "list-group-item list-group-item-action bg-dark text-white", id = "pepito4" })
                @Html.ActionLink("Administrar", "Index", "Admin", null, new { @class = "list-group-item list-group-item-action bg-dark text-white", id = "pepito3" })



            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-dark border-bottom">
                <button class="btn text-secondary" id="menu-toggle">Ocultar</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                               Login
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Conectar</a>
                                <a class="dropdown-item" href="#">Cerrar</a>
                                
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>


            <div class="container-fluid">
                @RenderBody()

            </div>

            </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @RenderBody()
            </div>
        </div>       
    </div>
}
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Content/grid/jquery-1.10.2.min.js"></script>
    <script src="~/Content/grid/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.anexgrid.min.js"></script>
    <script src="~/Scripts/ini.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>

    <script src="~/Content/grid/jquery.anexgrid.js"></script>


    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>